@page
@model MiniInventory.UI.Pages.Stock.ManageStockModel
@{
    ViewData["Title"] = "Manage Stock";
}

<h2>Manage Stock (In / Out)</h2>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<form method="post">
    <div class="mb-3">
        <label asp-for="Transaction.ProductId" class="form-label">Product</label>
        <select asp-for="Transaction.ProductId" class="form-select" asp-items="Model.ProductList">
            <option value="">-- Select Product --</option>
        </select>
        <span asp-validation-for="Transaction.ProductId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Transaction.Type" class="form-label">Transaction Type</label>
        <select asp-for="Transaction.Type" class="form-select">
            <option value="IN">Stock In</option>
            <option value="OUT">Stock Out</option>
        </select>
        <span asp-validation-for="Transaction.Type" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Transaction.Quantity" class="form-label">Quantity</label>
        <input asp-for="Transaction.Quantity" class="form-control" />
        <span asp-validation-for="Transaction.Quantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Transaction.TransactionDate" class="form-label">Date</label>
        <input asp-for="Transaction.TransactionDate" type="date" class="form-control" />
        <span asp-validation-for="Transaction.TransactionDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Submit</button>
    <a asp-page="Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}