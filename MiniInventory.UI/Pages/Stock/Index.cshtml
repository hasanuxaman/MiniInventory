@page
@model MiniInventory.UI.Pages.Stock.IndexModel

@{
    ViewData["Title"] = "Stock Transactions";
}

<h2 class="mb-4">Stock Transactions</h2>

<a asp-page="ManageStock" class="btn btn-primary mb-3">+ Stock In/Out</a>
<div class="card-body">
    <table class="table table-bordered table-sm table-striped table-hover">
        <thead class="table-primary">
        <tr>
            <td>ProductId</td>
            <th>Product</th>
           @*  <th >Current Stock</th> *@
            <th>Quantity</th>
            <th>Type</th>
            <th>Transaction Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Transactions)
        {
            <tr>
                <td>@item.ProductId</td>
                <td>@item.ProductName</td>
                @* <td>@item.ProductCurrentStock</td> *@
                <td>@item.Quantity</td>
                <td>@item.Type</td>
                <td>@item.TransactionDate.ToString("yyyy-MM-dd")</td>
            </tr>
        }
    </tbody>
</table>
</div>