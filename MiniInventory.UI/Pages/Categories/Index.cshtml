@page
@model MiniInventory.UI.Pages.Categories.IndexModel
@{
    ViewData["Title"] = "All Categories";
}

<h2>All Categories</h2>

<a asp-page="Create" class="btn btn-success mb-3">Add New Category</a>
<div class="card-body">
    <table class="table table-bordered table-sm table-striped table-hover">
        <thead class="table-primary">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Categories)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-warning">Edit</a>

                    <form method="post" asp-page-handler="Delete" asp-route-id="@category.Id" style="display:inline;"
                          onsubmit="return confirm('Are you sure you want to delete this category?');">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>