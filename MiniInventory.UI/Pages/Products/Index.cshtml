@page
@model MiniInventory.UI.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Products";
}


<h1>Products</h1>

<a asp-page="Create" class="btn btn-primary mb-2">+ Add New Product</a>
<div class="card-body">
    <table class="table table-bordered table-sm table-striped table-hover">
        <thead class="table-primary">
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Unit</th>
            <th>UnitPrice</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Products != null && Model.Products.Any())
        {
            foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.CategoryName</td>
                    <td>@product.Unit</td>
                    <td>@product.UnitPrice.</td>
                    <td>
                        <a asp-page="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-page="Delete" asp-route-id="@product.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center text-muted">No products found.</td>
            </tr>
        }
    </tbody>
</table>
</div>
