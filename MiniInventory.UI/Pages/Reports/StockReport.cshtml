@page
@model MiniInventory.UI.Pages.Reports.StockReportModel
<h2>Stock Report</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Product</th>
            <th>Current Stock</th>
            <th>Last Transaction</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var report in Model.ReportList)
        {
            <tr>
                <td>@report.ProductName</td>
                <td>@report.CurrentStock</td>
                <td>@report.LastTransactionDate?.ToString("yyyy-MM-dd") ?? "N/A"</td>
            </tr>
        }
    </tbody>
</table>
